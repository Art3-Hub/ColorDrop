# Private Key (DO NOT COMMIT THE ACTUAL .env FILE)
# This should be the UPGRADER_ADDRESS private key for deploying
PRIVATE_KEY=your_upgrader_private_key_here

# Role Addresses (Two-Owner System)
# Admin: Primary owner (can grant/revoke roles, manage settings)
ADMIN_ADDRESS=your_admin_wallet_address_here
# Upgrader: Can deploy and upgrade contracts (must match PRIVATE_KEY)
UPGRADER_ADDRESS=your_upgrader_wallet_address_here

# RPC URLs
CELO_RPC_URL=https://forno.celo.org
SEPOLIA_RPC_URL=https://celo-sepolia.drpc.org

# API Keys for contract verification
# CeloScan: https://celoscan.io/myapikey
CELOSCAN_API_KEY=your_celoscan_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Blockscout API Key for contract verification
# Get one at: https://explorer.celo.org/account/api-key
BLOCKSCOUT_API_KEY=your_blockscout_api_key_here

# Dual Treasury Addresses (50/50 split of system fees - 0.1 CELO each per pool)
TREASURY_ADDRESS_1=your_first_treasury_address_here
TREASURY_ADDRESS_2=your_second_treasury_address_here

# Backend Verifier Address (calls setUserVerification after SELF proof validation)
VERIFIER_ADDRESS=your_backend_verifier_wallet_address_here

# Deployed Contract Addresses (filled after deployment)
# Celo Mainnet
PROXY_ADDRESS=
IMPLEMENTATION_ADDRESS=

# Celo Sepolia Testnet
SEPOLIA_PROXY_ADDRESS=
SEPOLIA_IMPLEMENTATION_ADDRESS=

# Gas Reporting
REPORT_GAS=false
